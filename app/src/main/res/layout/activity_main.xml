<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:layout_marginTop="10dp"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:padding="5dp"
                android:textSize="96sp"
                android:id="@+id/scoreTeamA"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:onClick="plus3_teamA"
                android:background="#FF6D00"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:onClick="plus2_teamA"
                android:background="#FF6D00"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:onClick="freeThrowTeamA"
                android:background="#FF6D00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:layout_marginTop="10dp"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:padding="5dp"
                android:textSize="96sp"
                android:id="@+id/scoreTeamB"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:onClick="plus3_teamB"
                android:background="#FF6D00"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:onClick="plus2_teamB"
                android:background="#FF6D00"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:onClick="freeThrowTeamB"
                android:background="#FF6D00"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="20dp"
            android:background="#FF6D00"
            android:onClick="resetScore"/>

    </LinearLayout>


</LinearLayout>
